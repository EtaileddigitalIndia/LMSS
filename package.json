{
  "name": "global-lms-backend",
  "version": "1.0.0",
  "description": "Backend API for Global LMS + Student Portal",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "start:prod": "set NODE_ENV=production && node src/index.js",
    "build": "echo 'No build step required'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate:atlas": "node migrate-to-atlas.js",
    "migrate:backup": "node migrate-to-atlas.js && echo 'Backup created at backup-data.json'",
    "test:atlas": "node test-atlas-connection.js",
    "test:atlas:prod": "set NODE_ENV=production && node test-atlas-connection.js",
    "test:both": "node test-both-atlas.js",
    "test:email": "node test-email.js",
    "deploy:prepare": "node scripts/deploy.js",
    "deploy:netlify-render": "node scripts/deploy-netlify-render.js",
    "urls:replace": "node scripts/replace-urls.js"
  },
  "keywords": [
    "lms",
    "education",
    "mongodb",
    "api"
  ],
  "author": "Global LMS Team",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "mongoose": "^8.16.3",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
